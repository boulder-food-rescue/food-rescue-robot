<% if log.has_volunteer? current_volunteer%>
  <% if log.volunteers.length > 1 %> <!-- users wanted folks to only be able to leave shifts by contacting admin. FIXME: make this a per-region setting -->
    <%= link_to "(Leave it)", :controller => "logs", :action => "leave", :id => log %>
  <% end %>
<% else %>
  <%=link_to (log.has_volunteers? ? '(Join it)' : '(Take it)'), :controller => "logs", :action => "take", :id => log %>
<% end %>
