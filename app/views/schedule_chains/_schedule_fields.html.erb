<div class="nested_fields" style="display:table-row;">
  <div style="display:table-cell"><%= f.association :location, :collection => @region.locations, :as=>:select, :label=>false, :input_html => {class: 'form-control' } %>
  <% unless f.object.location.nil? %>
    (<%= f.object.pickup_stop? ? "Donor" : "Recipient" %>)
  <% end %>
  </div>
  <div style="display:table-cell"><%= f.text_field(:position, size:4, class: "form-control") %></div>
  <div style="display:table-cell"><%= f.select :food_type_ids, @region.food_types.collect {|x| [x.name, x.id]}, {}, :multiple => true, :class => 'form-control' %></div>
  <button onclick="$(this).parent().remove();" class="btn btn-sm btn-danger">
    <i class="fa fa-remove"></i>
    Remove
  </button>
</div>
