<h2><%=@page_title%></h2>

<div class="row">
  <% if current_volunteer.any_admin? && !@my_admin_regions.nil? %>
    <div class="col-sm-6 text-left">
      <%= form_tag("/schedule_chains/new", method: "get", class: 'form-inline') do %>
        New Scheduled Route For <%= select_tag("region_id", options_for_select(@my_admin_regions.collect{ |r| [r.name,r.id] }), {class: 'form-control'}) %>
        <%= submit_tag("Go") %>
      <% end %>
    </div>
  <% end %>
</div>

<% if current_volunteer.assignments.length == 0 %>
  <p>You haven't been assigned to any regions, so you can't see anything yet. Ask a coordinator for your region to assign you!</p>
<% elsif @schedules.length == 0 %>
  <p>Local schedule list is empty.</p>
<% elsif current_volunteer.regions.length == 0 %>
  <p>You aren't assigned to any regions, so you can't see anything yet. Ask a coordinator in your region to assign you!</p>
<% else %>

  <div id="modal"></div>

  <table class="table" id="data_table">
    <thead>
      <tr>
        <th>Info</th>
        <th>Day</th>
        <th>Stops</th>
        <th>Volunteers</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Notes</th>
        <% if current_volunteer.any_admin? %>
          <th> Admin Notes</th>
        <% end %>
        <th>Prior Volunteers</th>
        <th>Transport</th>
        <th>Food Types</th>
        <% if current_volunteer.any_admin? %>
          <th>Link</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%
        @schedules.each do |schedule|
          row_bgcolor = nil
          if schedule.no_volunteers?
            row_bgcolor = "pink"
          elsif schedule.temporary
            row_bgcolor = "#9999FF"
          elsif schedule.volunteers_needing_training?
            row_bgcolor = "lightgreen"
          elsif not schedule.functional?
            row_bgcolor = "yellow"
          end
      %>
        <tr style="<%= "background-color: #{row_bgcolor};" if row_bgcolor.present? %>">
          <td>
            <a class="btn btn-info info" href="/schedule_chains/<%= schedule.id %>">
              <i class="fa fa-info-circle"></i>
              Info
            </a>
          </td>
          <td>
            <strong>
              <% if schedule.one_time? %>
                <%= schedule.detailed_date %>
              <% else %>
                <span style="display:none;">
                  <%= schedule.day_of_week %>
                </span>
                <%= schedule.day_of_week.nil? ? "" : Date::DAYNAMES[schedule.day_of_week] %>
              <% end %>
            </strong>
          </td>
          <td>
            <% unless schedule.schedules.nil? %>
              <% schedule.schedules.each do |stop| %>
                <% next if stop.location.nil? %>
    						<%= link_to stop.location.name, stop.location %>
        				<% if stop.location.is_donor %>
              		(Donor)
    						<% else %>
    							(Recipient)
    						<% end %>
                <br />
    					<% end %>
            <% end %>
          </td>
          <td>
            <% if schedule.no_volunteers? or schedule.temporary %>
              <a class="btn btn-primary take" href="/schedule_chains/take?id=<%= schedule.id %>">
                <i class="fa fa-hand-rock-o"></i>
                Take Weekly Shift
              </a>
            <% else %>
              <% schedule.volunteers.each do |volunteer| %>
                <%= link_to volunteer.name, volunteer %><br />
              <% end %>
              <%= render 'take_or_leave', schedule: schedule %>
            <% end %>
          </td>
          <td>
            <%= readable_start_time schedule %>
          </td>
          <td>
            <%= readable_stop_time schedule %>
          </td>
          <td style="font-size: 10pt;">
            <%= word_wrap(schedule.public_notes, line_width: 20).gsub("\n","<br>").html_safe unless schedule.public_notes.nil? %>
          </td>
          <% if current_volunteer.any_admin? %>
            <td>
              <%= word_wrap(schedule.admin_notes,:line_width => 20).gsub("\n","<br>").html_safe unless schedule.admin_notes.nil? or !current_volunteer.region_admin?(schedule.region) %>
            </td>
          <% end %>
          <td style="font-size: 10pt;">
            <% schedule.prior_volunteers.each do |prior_volunteer| %>
              <%= link_to prior_volunteer.name, prior_volunteer %><br />
            <% end %>
          </td>
          <td><%= schedule.transport_type.nil? ? "?" : schedule.transport_type.name %></td>
          <td>
            <% foods = ""
                schedule.schedules.each do |stops|
                  if stops.is_pickup_stop?
                    foods += "<li><em>" + (stops.location.name + ":</em> " + stops.food_types.collect{ |ft| ft.name }.join(", ") + "\n")
                  end
    		      end %>
            <ul>
              <%= foods.html_safe %>
            </ul>
          </td>
          <td>
            <% if current_volunteer.any_admin? %>
              <%= link_to 'edit', edit_schedule_chain_path(schedule) %><br>
              <%= link_to "delete", schedule, confirm: "Are you sure?", method: :delete %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br><br>
<b>Key:</b>
<span class="label" style="background: yellow">Missing Donor/Recipient</span>
<span class="label" style="background: pink">No Volunteer</span>
<span class="label" style="background: lightgreen">Needs Training</span>
<span class="label" style="background: #9999FF">Temporary Cover</span>
