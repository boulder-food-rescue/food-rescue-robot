<div class="nested_fields" style="display:table-row;">
  <div style="display:table-cell"><%= f.association :location, :collection => @region.locations, :as=>:select, :label=>false, :input_html => {class: 'form-control' } %>
  <% unless f.object.location.nil? %>
    (<%= f.object.is_pickup_stop? ? "Donor" : "Recipient" %>)
  <% end %>
  </div>
  <div style="display:table-cell;margin:50px"><%= f.text_field(:position, size:4, class: "form-control") %></div>
  <%= f.hidden_field(:food_type_ids, value: @region.food_types.where('name'=>"Food")[0].id) %>
  <button style="display:table-cell;margin:15px" onclick="$(this).parent().remove();" class="btn btn-sm btn-danger">
    <i class="fa fa-remove"></i>
    Remove
  </button>
</div>
